{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2021", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
